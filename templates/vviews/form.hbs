    }
     a{
        position: relative;
        font-size: 20px;
        color: white;
        text-decoration: none;
    }
    a:hover{
        color: yellow;
    }
    a::after{
        position: absolute;
        content: '';
        display: block;
        background-color: yellow;
        height: 1px;
        width:0%;
        bottom: -6px;
        left: -3.25px;
        transition: 0.1s;
    }
    a:hover::after{
       
        position: absolute;
        content: '';
        display: block;
        background-color: yellow;
        height: 1px;
        width:100%;
        bottom: -6px;
        left: -3.25px;
        transition: width .3s;
       
    }
 

