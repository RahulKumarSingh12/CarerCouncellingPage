<body>
    {{>navbar}}
    <img src="https://mindlerimages.imgix.net/tinyimg/desktop.svg" alt="">
    <div class="boxscreen">
        <h1>Welcome {{channelName}} to your Career councelling page</h1>
    </div>
    <h1 id="question">{{channelName}} please fill the  Form for your career analysis</h1>
    <div class="hbsform">
     <form action="#" method="post" id="quiz-form">
        <!-- Question 1 -->
        <div class="ques">
        <p>1.Which of the following activities do you enjoy most?</p>
        <label>
            <input type="radio" name="q1" value="a"> a)  Solving puzzles and problems
        </label>
        <label>
            <input type="radio" name="q1" value="b"> b) Helping and caring for others
        </label>
        <label>
            <input type="radio" name="q1" value="c"> c) Creating art or design
        </label>
        <label>
            <input type="radio" name="q1" value="d"> d) Working with numbers and data
        </label>
        </div>
        <!-- Question 2 -->
        <div class="ques">
        <p>2. What types of hobbies or activities do you find most engaging?</p>
        <label>
            <input type="radio" name="q2" value="a"> a) Playing musical instruments
        </label>
        <label>
            <input type="radio" name="q2" value="b"> b) Volunteering and community service
        </label>
        <label>
            <input type="radio" name="q2" value="c"> c) Writing or storytelling
        </label>
        <label>
            <input type="radio" name="q2" value="d"> d) Engaging in research or analysis
        </label>
        </div>
        <!-- Question 3 -->
        <div class="ques">
        <p>3. When choosing a career, what's more important to you?</p>
        <label>
            <input type="radio" name="q3" value="a"> a) Doing something you're passionate about
        </label>
        <label>
            <input type="radio" name="q3" value="b"> b)  Earning a high income
        </label>
        <label>
            <input type="radio" name="q3" value="c"> c) Having a stable work-life balance
        </label>
        <label>
            <input type="radio" name="q3" value="d"> d) Advancing quickly in your career
        </label>
        </div>
        <!-- Question 4 -->
        <div class="ques">
        <p>4. Which of the following best describes your personality?</p>
        <label>
            <input type="radio" name="q4" value="a"> a) Introverted and reflective
        </label>
        <label>
            <input type="radio" name="q4" value="b"> b) Outgoing and social
        </label>
        <label>
            <input type="radio" name="q4" value="c"> c) Creative and artistic
        </label>
        <label>
            <input type="radio" name="q4" value="d"> d) Analytical and logical
        </label>
        </div>
        <!-- Question 5 -->
        <div class="ques">
        <p>5. What topics or subjects do you find most interesting to read about or learn?</p>
        <label>
            <input type="radio" name="q5" value="a"> a) Psychology and human behavior
        </label>
        <label>
            <input type="radio" name="q5" value="b"> b) Environmental issues and sustainability
        </label>
        <label>
            <input type="radio" name="q5" value="c"> c) Literature and culture
        </label>
        <label>
            <input type="radio" name="q5" value="d"> d) Technology and innovation
        </label>
        </div>
        <!-- Question 6 -->
        <div class="ques">
        <p>6. What skills do you believe you excel at in your current job or studies?</p>
        <label>
            <input type="radio" name="q6" value="a"> a) Leadership and management
        </label>
        <label>
            <input type="radio" name="q6" value="b"> b) Communication and teamwork
        </label>
        <label>
            <input type="radio" name="q6" value="c"> c) Technical or specialized skills
        </label>
        <label>
            <input type="radio" name="q6" value="d"> d) Research and analysis
        </label>
        </div>
        <!-- Question 7 -->
        <div class="ques">
        <p>7. In a team project, which role would you be most comfortable taking?</p>
        <label>
            <input type="radio" name="q7" value="a"> a) Team leader or manager
        </label>
        <label>
            <input type="radio" name="q7" value="b"> b) Coordinator or communicator
        </label>
        <label>
            <input type="radio" name="q7" value="c"> c) Creative thinker or idea generator
        </label>
        <label>
            <input type="radio" name="q7" value="d"> d) Researcher or data analyst
        </label>
        </div>
        <!-- Question 8 -->
        <div class="ques">
        <p>8. What software tools or applications are you proficient in using?</p>
        <label>
            <input type="radio" name="q8" value="a"> a) Microsoft Office Suite
        </label>
        <label>
            <input type="radio" name="q8" value="b"> b) Project management software
        </label>
        <label>
            <input type="radio" name="q8" value="c"> c) Adobe Creative Suite
        </label>
        <label>
            <input type="radio" name="q8" value="d"> d) Programming languages (e.g., Python, Java)
        </label>
        </div>
        <!-- Question 9 -->
        <div class="ques">
        <p>9. Which types of problems or challenges do you enjoy tackling the most?</p>
        <label>
            <input type="radio" name="q9" value="a"> a) Organizational and leadership challenges
        </label>
        <label>
            <input type="radio" name="q9" value="b"> b) Interpersonal conflicts and resolutions
        </label>
        <label>
            <input type="radio" name="q9" value="c"> c) Complex, abstract problems
        </label>
        <label>
            <input type="radio" name="q9" value="d"> d) Data analysis and decision-making
        </label>
        </div>
        <!-- Question 10 -->
        <div class="ques">
        <p>10. Which areas of personal development or skills improvement do you believe are a priority for you?</p>
        <label>
            <input type="radio" name="q10" value="a"> a)  Public speaking and communication
        </label>
        <label>
            <input type="radio" name="q10" value="b"> b) Time management and organization
        </label>
        <label>
            <input type="radio" name="q10" value="c"> c)  Creative thinking and innovation
        </label>
        <label>
            <input type="radio" name="q10" value="d"> d) Technical or job-specific skills
        </label>
        </div>
        <input type="submit" value="Submit">
    </form>
    </div>

    <div id="results">
        <h2>Your Answers:</h2>
        <ul id="answer-list"></ul>
    </div>

   <footer class="boxscreen">
        <h1>Thankyou for coming to my page. Have a great career ahead</h1>
    </footer>
    <script>
        const form = document.getElementById('quiz-form');
        const resultsDiv = document.getElementById('results');
        const answerList = document.getElementById('answer-list');
        const possibilities = {
    aaaaaaaaaa: "Engineer",
    aaaaabbbbb: "Researcher",
    aaaaaccccc: "Data Analyst",
    aaaabbbbbbb: "Social Worker",
    aaaabbbbbb: "Psychologist",
    aaabbbcccc: "Artist",
    aaabbbdddd: "Software Developer",
    // Add more possibilities based on answer combinations
};

        var userAnswers;
        form.addEventListener('submit', function (e) {
            e.preventDefault();

            const answers = [];
            for (let i = 1; i <= 10; i++) {
                const question = `q${i}`;
                const selectedAnswer = document.querySelector(`input[name="${question}"]:checked`);
                if(i==1){
                    userAnswers=selectedAnswer.value;
                }
                else{
                    userAnswers+=selectedAnswer.value;
                }
                if (selectedAnswer) {
                    answers.push({
                        question: `Question ${i}`,
                        answer: selectedAnswer.value,
                    });
                }
            }
            const career = possibilities[userAnswers];
           

            displayAnswers(answers,career);
        });

        function displayAnswers(answers,career) {
            resultsDiv.style.display = 'block';
            answerList.innerHTML = '';

            //answers.forEach((item) => {
            //    const listItem = document.createElement('li');
            //    listItem.textContent = `${item.question}: ${item.answer}`;
            //    answerList.appendChild(listItem);
            //});
            const listItem = document.createElement('li');
                listItem.style.fontSize="50px";
                listItem.textContent = `Preferred carrer for you according to your form ${career}`;
                answerList.appendChild(listItem);
        }
    </script>
